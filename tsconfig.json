{
  "compilerOptions": {
    "target": "ES2015",                          
    "module": "CommonJS",                    
    "lib": ["ES2015", "DOM"],                     
    "allowJs": true,
    "outDir": "build",                          
    "strict": true,         
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}

